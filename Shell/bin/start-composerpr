#! /bin/bash

COMPOSER=`which composer`
GIT=`which git`
DIR=$1

mkdir ./"$DIR"
cd "$DIR"/

mkdir src includes resources tests util

cp "$DOTFILES/dot_gitignore" ./.gitignore
cp "$DOTFILES/php/.php_cs" ./util/.php_cs
cp "$DOTFILES/php/phpunit.xml" ./phpunit.xml
cp "$DOTFILES/php/run_tests" ./run_tests
cp "$DOTFILES/php/includes/loader.php" ./includes/loader.php

$GIT init
$GIT flow init
$GIT add .gitignore && git commit -m"initial commit with .gitignore"

$COMPOSER init

